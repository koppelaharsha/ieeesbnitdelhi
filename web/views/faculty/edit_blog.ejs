<%- include('../includes/header.ejs') %>

<div class="ui container basic segment stackable grid">
    <%- include('../includes/user_menu') %>
    <div class="ui sixteen wide tablet twelve wide computer column">
        <div class="ui fluid card">
            <div class="ui content">
                <img class="ui avatar big image" src="/ieeesb/images/users/<%= user.username %>.jpg" alt="">
                <%= user.username %>
            </div>
            <div class="ui content">
                <div class="ui form">
                    <form action='/ieeesb/f/edit-blog/<%= blog.id %>' method='post'>
                        <div class="field">
                            <label for="title">Title:</label>
                            <div class="ui input">
                                <input name='title' type='text' value='<%= blog.title %>' required>
                            </div>
                        </div>
                        <div class="field">
                            <label for="content">Content:</label>
                            <div class="ui input">
                                <textarea name='content' rows=10 required><%= blog.content.replace(/<br>/g,'\r\n') %></textarea>
                            </div>
                        </div>
                        <div class="field">
                            <button class="ui blue submit fluid button">UPDATE POST</button>
                        </div>
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
    
<%- include('../includes/footer.ejs') %>
