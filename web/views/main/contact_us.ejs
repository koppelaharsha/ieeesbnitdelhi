<%- include('../includes/header.ejs') %>

<div class="ui segment">
    <div class="column">
        <iframe
            src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d13979.446453087201!2d77.1045429!3d28.8429798!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x1169930518add2fe!2sNational+Institute+of+Technology+Delhi!5e0!3m2!1sen!2sin!4v1554731983239!5m2!1sen!2sin"
            width="100%" height="500px" frameborder="0" style="border:0" allowfullscreen>
        </iframe>
    </div>
</div>

<div class="ui two column stackable grid">
    <div class="middle aligned center aligned column">
        <div class="address">
            <h3>Address:</h3>
            <h4>National Institute of Technology,Delhi</h4>
            <h4>sector-A7, Narela </h4>
            <h4>Delhi - 110040</h4>
            <h4><i class="phone icon"></i> +919876543210 </h4>
            <h4><i class="envelope icon"></i> ieeenitdelhi@gmail.com </h4>
        </div>      
    </div>
    <div class="column">
        <div class="ui form">
            <h3 class="centered header">Feedback/Suggestions</h3>
            <% if(msg){ %>
            <div class="ui error message segment">
                <%= msg %>
            </div>
            <% } %>
            <form action="/ieeesb/contact_us" method="post">
                <div class="field">
                    <label for="name">Name: </label>
                    <div class="ui input">
                        <input type="text" name="name" placeholder="" required>
                    </div>
                </div>
                <div class="field">
                    <label for="email">Email: </label>
                    <div class="ui input">
                        <input type="text" name="email" placeholder="" required>
                    </div>
                </div>
                <div class="field">
                    <label for="feedback">Content: </label>
                    <div class="ui input">
                        <textarea name="feedback" rows="5" required></textarea>
                    </div>
                </div>
                <div class="field">
                    <button class="ui submit fluid button" type="submit">SUBMIT</button>
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            </form>
        </div>
    </div>
</div>

<hr>
<%- include('../includes/footer.ejs') %>
